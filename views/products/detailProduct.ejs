              </div>
              <div class="fb_btn">
                <div class="fb_btn_score">
                  <h2>4.7</h2>
                </div>
                <div class="fb_btn_stars_container">
                  <div class="fb_btn_stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                  </div>
                  <div class="fb_btn_opi">
                    <p>246 Opiniones</p>
                  </div>
                </div>
              </div>
              <!-- Barras Estrellas -->
              <div class="fb_bars">
                <div class="fb_bar5">
                  <div class="fb_text">
                    <p>5 Estrellas</p>
                  </div>
                  <div class="fb_bar_container">
                    <div class="fb_bar_complete">
                    </div>
                  </div>
                </div>
                <div class="fb_bar4">
                  <div class="fb_text">
                    <p>4 Estrellas</p>
                  </div>
                  <div class="fb_bar_container">
                    <div class="fb_bar_complete">
                    </div>
                  </div>
                </div>
                <div class="fb_bar3">
                  <div class="fb_text">
                    <p>3 Estrellas</p>
                  </div>
                  <div class="fb_bar_container">
                    <div class="fb_bar_complete">
                    </div>
                  </div>
                </div>
                <div class="fb_bar2">
                  <div class="fb_text">
                    <p>2 Estrellas</p>
                  </div>
                  <div class="fb_bar_container">
                    <div class="fb_bar_complete">
                    </div>
                  </div>
                </div>
                <div class="fb_bar1">
                  <div class="fb_text">
                    <p>1 Estrellas</p>
                  </div>
                  <div class="fb_bar_container">
                    <div class="fb_bar_complete">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Menu Foto -->
          <div class="photo_container">
            <div class="photo_box">
              <img src="/images/products/<%=product.imglink %> " alt="">
            </div>
            <div class="arrows_container">
              <i class="fas fa-chevron-left"></i>
              <i class="fas fa-chevron-right"></i>
            </div>
          </div>
          <!-- Menu Info -->
          <div class="info_container">
            <div class="info_category">
              <a href=""><%= product.categories.name %></a>
            </div>
            <div class="info_tittle">
              <h2><%= product.name %></h2>
            </div>
            <div class="info_price">
              <% if (product.discount == 0) { %>
                <h3>$<%= toThousand(product.price) %></h3>
              <% }else{ %>
                <h3>$<%= toThousand(product.price - (product.price / 100 * product.discount)) %></h3>
                <h4><%= product.discount %>% OFF</h4>
                <h4>$<%= toThousand(product.price) %></h4>
              <% } %> 
            </div>
            <div class="info_disponible">
              <% if (product.quantity > 0){ %>
                <p>Disponible <i class="fas fa-check"></i></p>
              <% } else { %>
                <p>Disponible <i class="fas fa-times"></i></p>
              <% } %>
            </div>
            <div class="info_color_container">
              <div class="info_color_tittle">
                <p>Color:</p>
              </div>
              <div class="info_color_boxes">
                <% if (product.color_id == 1 ) { %>
                  <div class="color_box1"></div>
                <% } %>
                <% if (product.color_id == 2 ) { %>
                  <div class="color_box2"></div>
                <% } %>
                <% if (product.color_id == 3 ) { %>
                  <div class="color_box3"></div>
                <% } %>
                <% if (product.color_id == 4 ) { %>
                  <div class="color_box4"></div>
                <% } %>
                <% if (product.color_id == 5 ) { %>
                  <div class="color_box5"></div>
                <% } %>
              </div>
            </div>
            <div class="info_size_container">
              <div class="info_size_tittle">
                <p>Selecciona tu talle</p>
              </div>
              <div class="info_size_boxes">
                <% if (product.sizes.id == 1 ) { %>
                  <div class="size_box1">
                    <p>XS</p>
                  </div>
                <% } %>
                <% if (product.sizes.id == 2 ) { %>
                <div class="size_box1">
                  <p>S</p>
                </div>
                <% } %>
                <% if (product.sizes.id == 3 ) { %>
                <div class="size_box2">
                  <p>M</p>
                </div>
                <% } %>
                <% if (product.sizes.id == 4 ) { %>
                <div class="size_box3">
                  <p>L</p>
                </div>
                <% } %>
                <% if (product.sizes.id == 5 ) { %>
                <div class="size_box4">
                  <p>XL</p>
                </div>
                <% } %>
              </div>
            </div>
            <div class="info_fit_container">
              <div class="info_fit_tittle">
                <p>Tipo de calce</p>
              </div>
              <div class="info_fit_boxes">
                <div class="fit_box1">
                  <% if (product.fit_id == 1){ %>                
                    <div class="fit_bar_active"></div>
                  <% } else { %> 
                    <div class="fit_bar"></div>  
                  <% } %>               
                  <div class="fit_bar_tittle">
                    <p>Skinny</p>
                  </div>
                </div>
                <div class="fit_box2">
                  <% if (product.fit_id == 2){ %>                
                    <div class="fit_bar_active"></div>
                  <% } else { %> 
                    <div class="fit_bar"></div>  
                  <% } %>               
                  <div class="fit_bar_tittle">
                    <p>Slim</p>
                  </div>
                </div>
                <div class="fit_box3">
                  <% if (product.fit_id == 3){ %>                
                    <div class="fit_bar_active"></div>
                  <% } else { %> 
                    <div class="fit_bar"></div>  
                  <% } %>               
                  <div class="fit_bar_tittle">
                    <p>Regular</p>
                  </div>
                </div>
                <div class="fit_box4">
                  <% if (product.fit_id == 4){ %>                
                    <div class="fit_bar_active"></div>
                  <% } else { %> 
                    <div class="fit_bar"></div>  
                  <% } %>               
                  <div class="fit_bar_tittle">
                    <p>Oversize</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="info_btn_container">
              <a href="">
                <div class="info_btn_buy">
                  <p>Agregar al carrito</p>
                </div>
              </a>
              <a href="">
                <div class="info_btn_love">
                  <i class="far fa-heart"></i>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
  <!-- FOOTER -->
  <%- include('../templates/footer') %>
  </body>
</html>
